
<br>
<div class="row">

  <div class="col-3">
    <div class="card">
    <div class="card-body">
      <h5 class="card-title">Add New Words</h5>
      <h6 class="card-subtitle mb-2 text-muted">Enter a word and a definition to be added to the list.</h6>
      <form action="/" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Add New Word">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="definition" placeholder="Definition">
        </div>
        <button type="submit" class="btn btn-primary" name="button">Add Word to List</button>
      </form>
    </div>
</div>
  </div>

  <% if @list.length > 0 %>

    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Current Word List</h5>
          <p class="card-text">
            <% @list.each do |each| %>
              <a href="/word/<%= each.id %>"> <p><%= each.name.titlecase %></a></p>
            <% end %>
          </p>
        </div>
        <div class="card-body">
          <a class="btn btn-primary" href="/sort_alphabetically">Sort Alphabetically</a>
          <br>
          <br>
          <a class="btn btn-primary" href="/sort_id">Sort by Order Added</a>
      </div>
      </div>
    </div>
  <% end %>


  <% if @word %>

    <div class="col-6">
      <div class="card">
        <% unless @word.image_link == nil %>
          <img class="card-img-top" src="<%= @word.image_link %>" alt="Card image">
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= @word.name.titlecase %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Definitions</h6>
          <p class="card-text">
            <ul>
              <% @word.definitions.each do |each| %>
                <li><%= each %></li>
              <% end %>
            </ul>
          </p>
          <form action="/word/<%= @word.id %>" method="post">
            <div class="form-group">
              <input type="text" class="form-control" name="add_definition" placeholder="Add Definition">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="image_link" placeholder="(Optional) Copy/Paste Image URL here">
            </div>
            <button type="submit" class="btn btn-primary" name="button">Update Word</button>
          </form>        </div>
      </div>
    </div>

  <% end %>
