<br>
<div class="row">

  <div class="col-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Add New Words</h5>
        <h6 class="card-subtitle mb-2 text-muted">Enter a word and a definition to be added to the list.</h6>
        <form action="/" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Add New Word">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="definition" placeholder="Definition">
          </div>
          <button type="submit" class="btn btn-primary" name="button">Add Word to List</button>
        </form>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <h5 class="card-subtitle">Current Word List</h5>
          <br>
          <form action="/search" method="get">
            <div class="form-group">
              <input class="form-control" type="text" name="search" placeholder="Search List">
            </div>
            <button type="submit" class="btn btn-primary" name="button">Search List</button>
          </form>
        </li>
      </ul>
      </div>
  </div>

  <% if @list.length > 0 %>

    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Current Word List</h5>
          <p class="card-text">
            <% @list.each do |each| %>
              <a href="/word/<%= each.id %>">
                <p><%= each.name.titlecase %></a>
              </p>
            <% end %>
          </p>
        </div>

        <ul class="list-group list-group-flush">
          <li class="list-group-item"><a class="btn btn-primary" href="/sort_alphabetically">Sort Alphabetically</a></li>
          <li class="list-group-item"><a class="btn btn-primary" href="/sort_id">Sort by Order Added</a></li>
          <li class="list-group-item"><a class="btn btn-primary" href="/random">Show Me a Random Word</a></li>
        </ul>

      </div>
    </div>


    <div class="col-6">
      <div class="card">

        <div class="card-body">
          <h5 class="card-title"><%= @search_word%> Not Found</h5>

        </div>
      </div>
    </div>

    <% end %>
